{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@api": [
        "./src/api"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@features": [
        "./src/features"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@language": [
        "./src/language"
      ],
      "@screens": [
        "./src/screens"
      ],
      "@state": [
        "./src/state"
      ],
      "@styles": [
        "./src/styles"
      ],
      "@types": [
        "./src/types/types.ts"
      ]
    }
  },
  "include": [
    "src"
  ]
}